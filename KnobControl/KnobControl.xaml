<UserControl x:Class="KnobControl.KnobControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KnobControl"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Viewbox Stretch="Uniform">
            <Grid x:Name="knobGrid">
                <Ellipse Fill="#FFF4F4F5" HorizontalAlignment="Center" Height="200" Stroke="Black" VerticalAlignment="Center" Width="200" Grid.RowSpan="2" MouseWheel="Ellipse_MouseWheel" MouseDown="Ellipse_MouseDown" MouseMove="Ellipse_MouseMove" MouseUp="Ellipse_MouseUp"/>
                <TextBlock x:Name="displayTextBlock" Text="Title'&lt;linebreak/&gt;'Value" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center"/>
                <Label x:Name="TitleLabel" Content="Title" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize ="24" Margin="0,73,0,100" FontFamily="Georgia"/>
                <Label x:Name="ValueLabel" Content="Value [unit]"  HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="18" IsHitTestVisible="False" FontFamily="Georgia" Margin="0,100,0,69"/>
            </Grid>
        </Viewbox>
    </Grid>
</UserControl>
